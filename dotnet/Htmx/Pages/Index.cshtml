@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Please click in the links below.</p>
</div>

<div hx-target="this">
    <button hx-get
            hx-page="Index"
            hx-page-handler="Snippet"
            hx-swap="outerHtml">
        Razor Page w/ Handler
    </button>
</div>

<div hx-target="this">
    <button hx-get="@Url.Page("Index", "Snippet")"
            hx-swap="outerHtml">
        Razor Page w/ Handler using Url.Page
    </button>
</div>

<div hx-target="this">
    <button hx-get
            hx-controller="Home"
            hx-action="Index"
            hx-route-id="1">
        Controller
    </button>
</div>

<div hx-target="this">
    <button hx-post
            hx-route="named">
        Named Route
    </button>
</div>

<form>
    @Html.AntiForgeryToken()
</form>